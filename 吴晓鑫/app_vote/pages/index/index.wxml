<!--pages/index/index.wxml-->
<view class="container">
    <view class="search_view">
        <view class="for_bug">
            <image src="https://dn-ehldtiim.qbox.me/c301721ad04357877f9f.png" mode="widthFix" class="{{search_Imgclass}}"></image>
            <input placeholder="搜索主题" focus="true" bindinput="search_theme_handler" type="text" placeholder-class="search_placeholder" class="search_input" value="{{searchTheme}}" bindfocus="sfocus" bindblur="sblur"/>    
        </view> 
        
    </view>
    <view class="content" >        
        <block wx:for="{{themeArray}}" wx:for-item="themeItem" wx:for-index="index" wx:key="themeList">
           <view class="theme_item" hover-class="theme_item_hover" bindtap="to_themeDetail" data-themeId="{{themeItem.themeid}}">
            <text class="text_item_first">{{index+1}}</text>
            <text class="text_item">{{themeItem.theme_name}}</text>
            <text class="text_item_end">{{themeItem.theme_count}}</text>    
           </view>
        </block>
        <block wx:if="{{isNull}}">
            <view>没有您搜索的内容？</view>
            <button bindtap="to_addtheme">添加主题</button>
            <!--<navigator url="../addtheme/addtheme" open-type="switchTab">添加主题</navigator>-->
        </block>
    </view>
</view>
